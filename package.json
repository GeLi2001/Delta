{
  "name": "delta",
  "displayName": "Delta",
  "description": "AI-powered code review assistant",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.94.2"
  },
  "publisher": "GeLi",
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GeLi2001/Delta"
  },
  "keywords": [
    "code review",
    "ai",
    "openai",
    "gpt",
    "git"
  ],
  "license": "MIT",
  "icon": "media/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "delta",
          "title": "Delta",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "delta": [
        {
          "id": "deltaSettings",
          "name": "Settings",
          "type": "webview"
        },
        {
          "id": "deltaActions",
          "name": "Actions"
        }
      ]
    },
    "commands": [
      {
        "command": "delta.reviewCode",
        "title": "Review Code Changes",
        "icon": "$(inspect)"
      },
      {
        "command": "delta.setOpenAIKey",
        "title": "Set OpenAI API Key",
        "icon": "$(key)"
      }
    ],
    "keybindings": [
      {
        "command": "delta.reviewCode",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "delta.reviewCode",
          "when": "view == aiReviewActions",
          "group": "navigation"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/diff2html": "^0.0.5",
    "@types/node": "^16.x",
    "@types/vscode": "^1.94.2",
    "@types/webpack": "^5.28.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "diff2html": "^3.4.48",
    "openai": "^4.73.1",
    "punycode": "^2.3.1",
    "simple-git": "^3.27.0"
  }
}
